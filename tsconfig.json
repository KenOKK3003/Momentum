{
  "compilerOptions": {
    "jsx": "react-native",
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "app",
    "backend",
    "contexts",
    "hooks",
    "utils",
    "nativewind-env.d.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}